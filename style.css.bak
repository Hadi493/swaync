@import url("/home/cg/.cache/wal/colors-waybar.css");

* {
  all: unset;
  font-size: 14px;
  font-family: "Iosevka";
  transition: 200ms;
}
trough highlight {
  background: @color2;
}
scale {
  margin: 0 7px;
}
scale trough {
  margin: 0rem 1rem;
  min-height: 8px;
  min-width: 70px;
  border-radius: 12.6px;
}
trough slider {
  margin: -10px;
  border-radius: 12.6px;
  box-shadow: 0 0 2px rgba(0, 0, 0, 1);
  transition: all 0.2s ease;
  background-color: @color4;
}
trough slider:hover {
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.8), 0 0 8px @color4;
}
trough {
  background-color: @color0;
} /* notifications */
background-color: rgba(30, 30, 46, 0.8);
.notification-background .notification {
  padding: 7px;
  border-radius: 12.6px;
}
.notification-background .notification.critical {
  box-shadow: inset 0 0 7px 0 @color1;
}
.notification .notification-content {
  margin: 7px;
}
.notification-content overlay {
  /* icons */
  margin: 4px;
}
.notification-content .summary {
  color: @color7;
}
.notification-content .time {
  color: @color8;
}
.notification-content .body {
  color: @color7;
}
.notification > *:last-child > * {
  min-height: 3.4em;
}
.notification-background .close-button {
  margin: 7px;
  padding: 2px;
  border-radius: 6.3px;
  color: @color0;
  background-color: @color1;
}
.notification-background .close-button:hover {
  background-color: @color9;
}
.notification-background .close-button:active {
  background-color: @color5;
}
.notification .notification-action {
  border-radius: 7px;
  color: @color7;
  box-shadow: inset 0 0 0 1px @color1;
  margin: 4px;
  padding: 8px;
  font-size: 0.2rem; /* controls the button size not text size*/
}
.notification .notification-action {
  background-color: @color0;
}
.notification .notification-action:hover {
  background-color: @color1;
}
.notification .notification-action:active {
  background-color: @color2;
}
.notification.critical progress {
  background-color: @color1;
}
.notification.low progress,
.notification.normal progress {
  background-color: @color4;
}
.notification progress,
.notification trough,
.notification progressbar {
  border-radius: 12.6px;
  padding: 3px 0;
} /* control center */
.control-center {
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.8), inset 0 0 0 1px @color0;
  border-radius: 12.6px;
  background-color: @color0;
  color: @color7;
  padding: 14px;
}
.control-center .notification-background {
  border-radius: 7px;
  box-shadow: inset 0 0 0 1px @color1;
  margin: 4px 10px;
}
.control-center .notification-background .notification {
  border-radius: 7px;
}
.control-center .notification-background .notification.low {
  opacity: 1.0;
}
.control-center .widget-title > label {
  color: @color7;
  font-size: 1.3em;
}
.control-center .widget-title button {
  border-radius: 7px;
  color: @color7;
  background-color: @color0;
  box-shadow: inset 0 0 0 1px @color1;
  padding: 8px;
}
.control-center .widget-title button:hover {
  background-color: @color1;
}
.control-center .widget-title button:active {
  background-color: @color2;
}
.control-center .notification-group {
  margin-top: 10px;
}
.control-center .notification-group:focus .notification-background {
  background-color: @color0;
}
scrollbar slider {
  margin: -3px;
  opacity: 1.0;
}
scrollbar trough {
  margin: 2px 0;
} /* dnd */
.widget-dnd {
  margin-top: 5px;
  border-radius: 8px;
  font-size: 1.1rem;
}
.widget-dnd > switch {
  font-size: initial;
  border-radius: 8px;
  background: @color0;
  box-shadow: none;
}
.widget-dnd > switch:checked {
  background: @color4;
}
.widget-dnd > switch slider {
  background: @color1;
  border-radius: 8px;
} /* mpris */
.widget-mpris-player {
  background: @color0;
  border-radius: 12.6px;
  color: @color7;
}
.mpris-overlay {
  background-color: @color0;
  opacity: 1;
  padding: 15px 10px;
}
.widget-mpris-album-art {
  -gtk-icon-size: 100px;
  border-radius: 12.6px;
  margin: 0 10px;
}
.widget-mpris-title {
  font-size: 1.2rem;
  color: @color7;
}
.widget-mpris-subtitle {
  font-size: 1rem;
  color: @color8;
}
.widget-mpris button {
  border-radius: 12.6px;
  color: @color7;
  margin: 0 5px;
  padding: 2px;
}
.widget-mpris button image {
  -gtk-icon-size: 1.8rem;
}
.widget-mpris button:hover {
  background-color: @color0;
}
.widget-mpris button:active {
  background-color: @color1;
}
.widget-mpris button:disabled {
  opacity: 1.0;
}
.widget-menubar > box > .menu-button-bar > button > label {
  font-size: 3rem;
  padding: 0.5rem 2rem;
}
.widget-menubar > box > .menu-button-bar > :last-child {
  color: @color1;
}
.power-buttons button:hover,
.powermode-buttons button:hover,
.screenshot-.buttons button:hover {
  background: @color0;
}
.control-center .widget-label > label {
  color: @color7;
  font-size: 2rem;
}
.widget-buttons-grid {
  padding-top: 1rem;
}
.widget-buttons-grid > flowbox > flowboxchild > button label {
  font-size: 2.5rem;
}
.widget-volume {
  padding: 1rem 0;
}
.widget-volume label {
  color: @color6;
  padding: 0 1rem;
}
.widget-volume trough highlight {
  background: @color6;
}
.widget-backlight trough highlight {
  background: @color3;
}
.widget-backlight label {
  font-size: 1.5rem;
  color: @color3;
}
.widget-backlight .KB {
  padding-bottom: 1rem;
}
.image {
  padding-right: 0.5rem;
}
